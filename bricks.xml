                </setting>

                <setting name="textPosition" type="select">
                    <locale group="quiqqer/presentation-bricks"
                            var="brick.setting.progressbar.textPosition"/>

                    <option value="top">
                        <locale group="quiqqer/presentation-bricks"
                                var="brick.setting.progressbar.textPosition.top"/>
                    </option>
                    <option value="center">
                        <locale group="quiqqer/presentation-bricks"
                                var="brick.setting.progressbar.textPosition.center"/>
                    </option>
                    <option value="bottom">
                        <locale group="quiqqer/presentation-bricks"
                                var="brick.setting.progressbar.textPosition.bottom"/>
                    </option>
                </setting>

                <setting name="additionalTextRight" type="checkbox">
                    <locale group="quiqqer/presentation-bricks" var="brick.setting.progressbar.additionalTextRight"/>
                </setting>

                <setting name="entries" type="hidden"
                         data-qui="package/quiqqer/presentation-bricks/bin/Controls/ProgressbarSettings"
                >
                    <locale group="quiqqer/presentation-bricks" var="brick.progressbar.settings.entries"/>
                </setting>
            </settings>
        </brick>

