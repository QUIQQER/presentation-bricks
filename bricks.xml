            </title>
            <description>
                <locale group="quiqqer/presentation-bricks"
                        var="control.progressbar.description"/>
            </description>

            <settings>

                <setting name="maxWidth" type="number" min="0" max="1920">
                    <locale group="quiqqer/presentation-bricks" var="brick.setting.progressbar.maxWidth"/>
                </setting>

                <setting name="additionalText" data-qui="controls/editors/Input">
